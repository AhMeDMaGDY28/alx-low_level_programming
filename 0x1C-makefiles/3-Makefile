.PHONY: all clean oclean fclean re
CC = gcc
SRC =  main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -rf

all: ${OBJ}
	${CC} ${SRC} -o ${NAME}
clean:
	find . -type f -name '*~' -delete
	find . -type f -name '.*.swp' -delete
	${RM} NAME
oclean:
	$(RM) *.o
fclean:
	clean oclean
re:
	touch ${SRC}